<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/delete_accont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   حذف الحساب"
        android:padding="25dp"
        android:drawableRight="@drawable/ic_delete_black_24dp"></TextView>

    <View
        android:layout_width="400dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:background="@color/bg"/>



    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   تسجيل خروج"
        android:padding="25dp"
        android:drawableRight="@drawable/ic_power_settings_new_black_24dp"></TextView>

    <View
        android:layout_width="400dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:background="@color/bg"/>

</LinearLayout>